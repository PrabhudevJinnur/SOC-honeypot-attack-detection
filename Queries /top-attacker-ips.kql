// =====================================
// Top Attacker IP Addresses
// =====================================
// Identifies source IPs responsible for the
// highest number of failed logon attempts.

SecurityEvent
| where EventID == 4625
| where isnotempty(IpAddress)
| extend AttackerIP = IpAddress
| summarize FailedAttempts = count() by AttackerIP
| order by FailedAttempts desc


